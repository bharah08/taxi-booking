pipeline{
    agent any
    tools{
        maven 'maven'
    }
      environment{
        SCANNER_HOME= tool 'sonar'
    }
    stages{
        stage('checkout-code'){
            steps{
              git 'https://github.com/bharah08/taxi-booking.git'
            }
        }
        stage('unit-test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('build-package'){
            steps{
                sh 'mvn clean install -DskipTests=true'
            }
        }
     stage('Sonarqube') {
            steps {
                withSonarQubeEnv('sonar'){
                   sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=taxi-webapp \
                   -Dsonar.java.binaries=. \
                   -Dsonar.projectKey=devops-test1234_taxi-webapp '''
               }
            }
        }
    stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
    }
}